generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

// ==========================================
// Auth.js Models (Required for Authentication)
// ==========================================

enum Role {
  USER
  ADMIN
}

model User {
  id                String    @id @default(cuid())
  name              String?
  email             String    @unique
  emailVerified     DateTime?
  image             String?
  password          String?   // For credentials auth (hashed)
  role              Role      @default(USER)
  
  // Security fields for brute-force protection
  failedAttemptCount Int      @default(0)
  lastFailedAt      DateTime?
  lockedUntil       DateTime?
  
  accounts          Account[]
  sessions          Session[]
  scores            Score[]
  auditLogs         AuditLog[]
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model AuditLog {
  id            String   @id @default(cuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  action        String   // e.g., "LOGIN_SUCCESS", "LOGIN_FAILED", "ACCOUNT_LOCKED"
  timestamp     DateTime @default(now())
  ipAddress     String?
  userAgent     String?
  metadata      Json?    // Additional context like error reason

  // Indexes for query performance
  @@index([userId, timestamp])
  @@index([action, timestamp])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// GeoBrains Application Models
// ==========================================

model QuizCategory {
  id          String     @id @default(cuid())
  name        String     @unique // e.g., "Capitals", "Flags", "Map Locations"
  slug        String     @unique // e.g., "capitals", "flags", "map-locations"
  description String?
  questions   Question[]
  scores      Score[]
}

model Question {
  id         String       @id @default(cuid())
  categoryId String
  category   QuizCategory @relation(fields: [categoryId], references: [id])
  text       String       @db.Text
  image      String?      // URL for flags or geographic features
  options    Json?        // Multiple choice options
  answer     String       @db.Text
  metadata   Json?        // Coordinates for maps, population data, etc.
  createdAt  DateTime     @default(now())
}

model Score {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id])
  categoryId    String
  category      QuizCategory @relation(fields: [categoryId], references: [id])
  value         Int
  timeInSeconds Int
  createdAt     DateTime     @default(now())

  @@index([categoryId, value(sort: Desc)]) // Optimized for leaderboard
}

// ==========================================
// Admin Panel Models
// ==========================================

model Country {
  id        String    @id @default(cuid())
  name      String    @unique
  code      String    @unique // ISO 2-letter code
  region    String
  centerLat Float
  centerLng Float
  
  capitals  Capital[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Capital {
  id        String   @id @default(cuid())
  name      String
  countryId String   @unique // One capital per country
  country   Country  @relation(fields: [countryId], references: [id])
}

model FamousPerson {
  id          String   @id @default(cuid())
  name        String
  country     String
  description String
  region      String
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model Landmark {
  id          String   @id @default(cuid())
  name        String
  country     String
  description String?
  imageUrl    String?
  hints       String[]
  createdAt   DateTime @default(now())
}

model Currency {
  id        String   @id @default(cuid())
  name      String
  symbol    String
  country   String
  createdAt DateTime @default(now())
}

model Language {
  id        String   @id @default(cuid())
  name      String
  country   String
  createdAt DateTime @default(now())
}
