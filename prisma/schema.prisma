generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For email/password auth
  avatar        String?
  scores        Score[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model QuizCategory {
  id          String     @id @default(cuid())
  name        String     @unique // e.g., "Capitals", "Flags", "Map Locations"
  slug        String     @unique // e.g., "capitals", "flags", "map-locations"
  description String?
  questions   Question[]
  scores      Score[]
}

model Question {
  id         String       @id @default(cuid())
  categoryId String
  category   QuizCategory @relation(fields: [categoryId], references: [id])
  text       String       @db.Text
  image      String?      // URL for flags or geographic features
  options    Json?        // Multiple choice options
  answer     String       @db.Text
  metadata   Json?        // Coordinates for maps, population data, etc.
  createdAt  DateTime     @default(now())
}

model Score {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id])
  categoryId    String
  category      QuizCategory @relation(fields: [categoryId], references: [id])
  value         Int
  timeInSeconds Int
  createdAt     DateTime     @default(now())

  @@index([categoryId, value(sort: Desc)]) // Optimized for leaderboard
}
