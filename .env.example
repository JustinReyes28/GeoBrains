# Environment Variables Template
# Copy this file to .env and fill in your values

# Prisma Database URL for PostgreSQL
# Example for local development: postgresql://USER:PASSWORD@localhost:5432/geobrains
POSTGRES_PRISMA_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Non-pooling connection URL for direct database access
# Example for local development: postgresql://USER:PASSWORD@localhost:5432/geobrains
POSTGRES_URL_NON_POOLING="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Vercel Deployment (Optional but recommended for GeoBrains)
# POSTGRES_PRISMA_URL=""
# POSTGRES_URL_NON_POOLING=""

# Auth.js Configuration
AUTH_SECRET=

# SMTP Email Configuration (Nodemailer)
# For Gmail: host=smtp.gmail.com, port=587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Generate with: npx auth secret

# Trusted Proxy Configuration for IP Extraction
# Used to prevent IP spoofing in X-Forwarded-For headers
# Set to the number of trusted proxies between client and server
# Example: If you have 1 load balancer and 1 CDN, set to 2
# TRUSTED_PROXY_COUNT=0

# Set to true to prefer provider-specific headers over X-Forwarded-For
# Useful when running on platforms like Cloudflare, Fly.io, etc.
# PREFER_PROVIDER_HEADERS=false